{
  "manifest_version": 3,
  "name": "NetSuite Assistant",
  "version": "1.0.0",
  "description": "Chrome extension for NetSuite integration",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.netsuite.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.netsuite.com/*"],
      "js": ["content/content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}